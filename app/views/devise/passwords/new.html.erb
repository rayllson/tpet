<h2><%= t("devise.login.loss_password") %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, :class => "navbar-form navbar-right") do |f| %>
  <%= devise_error_messages! %>

  <%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, :class => "form-control" %></br>

  <%= f.submit t("devise.login.recovery_instructions"), :class => "btn btn-success" %>
<% end %>