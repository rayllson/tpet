<h2><%= t("users.edit") %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name, :class => "navbar-form navbar-right"), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.label t("users.name") %><br />
  <%= f.text_field :name, autofocus: true, :class => "form-control" %>

  <%= f.label t("users.congregation") %><br/>
  <%= f.collection_select(:congregation_id, Congregation.all, :id, :name, {}, {:class => "form-control"} )%>   
  
  <%= f.label t("users.address") %><br />
  <%= f.text_field :address, autofocus: true, :class => "form-control" %>

  <%= f.label t("users.phone")%><br />
  <%= f.text_field :phone, autofocus: true, :class => "form-control" %>

  <%= f.label t("users.pioneer") %>
  <%= f.check_box :pioneer %> Sim<br/>

  <%= f.label :admin %>
  <%= f.check_box :admin, autofocus: true %></br>

  <%= f.label t("users.congregation_function") %><br>
  <%= f.select :congregation_function, [["Não Listada", 0],["Ançião", 1],["Servo Ministerial", 2]], {}, {:class => "form-control"} %>

  <%= f.label t("users.email") %><br />
  <%= f.email_field :email, autofocus: true, :class => "form-control" %>

  <%= f.label t("users.new_password") %> <i>(<%= t("form.edit_password_blank") %>)</i><br />
    <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>

  <%= f.label t("users.password_confirmation") %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>

  <%= f.label t("users.current_password") %> <i>(<%= t("form.edit_current_password") %>)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", :class => "form-control" %>
  </br>
  <%= f.submit t("crud.confirm"), :class => "btn btn-success" %>
<% end %>